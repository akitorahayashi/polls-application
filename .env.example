# [開発環境用] Django Webサービスのポート番号
DEV_PORT=8000

# [開発環境用] Webサービスのバインド先 (デフォルトはローカルのみ)
DEV_BIND_HOST=127.0.0.1

# [本番環境用] Nginxが公開するポート番号
# 50000番台を推奨 (ポート競合の回避、非特権ユーザーでの実行のため)
PROD_PORT=58080

# [本番環境用] Nginxが使用するホストIP
PROD_HOST_IP=127.0.0.1

# PostgreSQL データベース接続情報
# postgres://[USER]:[PASSWORD]@[HOST]:[PORT]/[NAME]
DATABASE_URL=postgres://polls_user:polls_password@db:5432/polls_db